<input type="button" id='setScreen' value='Установить'/>
    
    
    
<script type="text/javascript">
$(document).ready(function () {
    $("#setScreen").click(function(){
        $("#screen").width($("#screenWidth").val());
        $("#screen").height($("#screenHeight").val());
        });
    var winWidth = $("#screen").width();
    var winHeight = $("#screen").height();
    $(".area").hide();
//     $("#mainmenu").css({marginLeft:(winWidth/2-$("#mainmenu").width()/2)+'px',marginTop:((winHeight-$("#topArea").height())/2-$("#mainmenu").height()/2)+'px'});
    var marginLeft = (winWidth-($("#feedMenu").width()+15+$("#searchMenu").width()+15+$("#sendMenu").width()+15))/4+'px'
    $("#feedMenu, #searchMenu,#sendMenu").css({marginLeft:marginLeft});
//     $("#sendMenu").css({marginRight:marginLeft});
    $("#searchMenu").click(searchMenuClick);
    $("#searchTextBut").css({marginLeft:(winWidth/2-$("#searchTextBut").width()/2)+'px'});
    $("#searchText")
        .data('originalText', $("#searchText").text())
        .css('color', '#999')
        .focus(function() {
            var $el = $(this);
            if (this.value == $el.data('originalText')) {
                this.value = '';
                $(this).attr('rows','2').animate({color:'#444'},200);
                jQuery($(this)).autoResize();
                $("#searchTextBut").show();
            }
        })
        .blur(function() {
            if (this.value == '') {
                this.value = $(this).data('originalText');
                $(this).attr('rows','1').animate({color: '#999'},200);
                $("#searchTextBut").hide();
            }
        });
});

</script>

